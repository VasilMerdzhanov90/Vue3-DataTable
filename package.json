{
  "name": "vue3-data-table",
  "version": "1.0.0",
  "description": "A feature-rich and customizable data table component for Vue 3 applications.",
  "author": "Vasil Merdzhanov",
  "private": false,
  "license": "MIT",
  "main": "dist/vue3-data-table.umd.js",
  "module": "dist/vue3-data-table.es.js",
  "types": "dist/types/index.d.ts",
  "files": ["dist"],
  "keywords": ["vue3", "data-table", "vue3-data-table", "vue-component"],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json",
    "build:css": "node ./node_modules/tailwindcss/lib/cli.js -i ./src/style.css -o ./dist/style.css --minify",
    "build": "npm run build:css && vue-tsc -b && vite build",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "primeicons": "^7.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.7.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vue-tsc": "^3.1.1"
  }
}
